#!/bin/bash

build_backend_image() {
    
    ################################################
    # Gerando a imagem docker do backend
    ################################################
    
    cd backend
    
    # eval ${minikube docker-env}

    docker build . -t contatos-v2/backend
        
    # minikube image load apenas funciona no docker 24
    
    minikube image load contatos-v2/backend

    cd ..
}

build_frontend_image() {
    
    ################################################
    # Gerando a imagem docker do frontend
    ################################################
    
    cd frontend
    
    # eval ${minikube docker-env}
    
    docker build . -t contatos-v2/frontend
    
    minikube image load contatos-v2/frontend

    cd ..
}

load_mongo_image() {
    minikube image load mongo:4.2
}

init_minikube() {

    ################################################
    # Inicializando o Minikube
    ################################################

    minikube start

    ################################################
    # Habilitando o Ingress
    ################################################

    minikube image load k8s.gcr.io/ingress-nginx/controller:v1.9.4

    minikube addons enable ingress

    ################################################
    # Inicializando o DashBoard
    ################################################

    minikube addons enable dashboard

    minikube addons enable metrics-server

    minikube dashboard &
}

################################################
# Verificando flag -ib
################################################

while getopts ":ib" option; do
   case $option in
      i) # initialize/start minikube
         init_minikube
         ;;
      b) # build images
         build_backend_image
         build_frontend_image
         load_mongo_image
         ;;
   esac
done

################################################
# Instalando via helm
################################################

helm install contatos contatos-chart